  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "covid-backend",
        "ENV": "development"
      },
      "args": [
        "run",
        "--no-debugger"
      ],
      "cwd": "${workspaceFolder}/backend"
    },
    {
      "name": "Python: Archivo actual",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": [
        "--help",
      ]
    },
    {
      "name": "Python: Streamlit",
      "type": "python",
      "request": "launch",
      "module": "streamlit.cli",
      "args": [
        "run",
        "${workspaceFolder}/dashboard/app/main.py",
      ],
    }
  ]
}
